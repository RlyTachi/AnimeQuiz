<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Game">

    <LinearLayout
        android:id="@+id/mainGameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/categoriesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/charactersLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/layout_1"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/chView1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/characters"
                        android:src="@drawable/characterslogo" />

                    <LinearLayout
                        android:id="@+id/chTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/chTextView"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:gravity="bottom|center"
                            android:text="@string/characters"
                            android:textColor="@color/text"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/chScoreTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:text="@string/unlocked"
                            android:textColor="@color/secondText"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/layout_1"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/locView1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/locations"
                        android:src="@drawable/locationslogo" />

                    <LinearLayout
                        android:id="@+id/locTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/locTextView"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:gravity="bottom|center"
                            android:text="@string/locations"
                            android:textColor="@color/text"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/locScoreTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:text="@string/unlocked"
                            android:textColor="@color/secondText"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/titlesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_1"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/tiView1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/titles"
                        android:src="@drawable/titleslogo" />

                    <LinearLayout
                        android:id="@+id/tiTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tiTextView"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:gravity="bottom|center"
                            android:text="@string/titles"
                            android:textColor="@color/text"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tiScoreTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:text="@string/unlocked"
                            android:textColor="@color/secondText"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_1"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/itView1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/titles"
                        android:src="@drawable/characterslogo" />

                    <LinearLayout
                        android:id="@+id/itTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/itTextView"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:gravity="bottom|center"
                            android:text="@string/items"
                            android:textColor="@color/text"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/itScoreTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="top|center"
                            android:layout_weight="1"
                            android:fontFamily="@font/pixel"
                            android:text="@string/unlocked"
                            android:textColor="@color/secondText"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eventsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_1"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/evView1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/titles"
                        android:src="@drawable/soonlogo" />

                    <LinearLayout
                        android:id="@+id/evTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/evTextView"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/pixel"
                            android:gravity="center"
                            android:text="@string/soon"
                            android:textColor="@color/text"
                            android:textSize="10sp" />

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/evScoreTextView"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:layout_gravity="top|center"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:fontFamily="@font/pixel"-->
                        <!--                            android:text="@string/unlocked"-->
                        <!--                            android:textColor="@color/secondText"-->
                        <!--                            android:textSize="18sp" />-->
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="start|bottom"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:contentDescription="@string/back"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/scoreCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/pixel"
                android:gravity="center"
                android:text="@string/scores"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/unlockView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:contentDescription="@string/unlock"
                android:paddingBottom="2dp"
                android:src="@drawable/unlock" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>