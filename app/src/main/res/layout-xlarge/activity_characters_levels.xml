<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/mainLevels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choiceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/pixel"
            android:gravity="center"
            android:text="@string/availableLevels"
            android:textColor="@color/text"
            android:textSize="60sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/chLevel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_1"
                    android:fontFamily="@font/pixel"
                    android:padding="20dp"
                    android:text="@string/level1"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/chLevel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_1_locked"
                    android:fontFamily="@font/pixel"
                    android:padding="20dp"
                    android:text="@string/level2"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/chLevel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_1_locked"
                    android:fontFamily="@font/pixel"
                    android:padding="20dp"
                    android:text="@string/level3"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/chLevel4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_1_locked"
                    android:fontFamily="@font/pixel"
                    android:padding="20dp"
                    android:text="@string/level4"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/chLevel5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_1_locked"
                    android:fontFamily="@font/pixel"
                    android:padding="20dp"
                    android:text="@string/level5"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/soon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_1_locked"
                    android:enabled="false"
                    android:fontFamily="@font/pixel"
                    android:padding="20dp"
                    android:text="@string/soon"
                    android:textSize="50sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>