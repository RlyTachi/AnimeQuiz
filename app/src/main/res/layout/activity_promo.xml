<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/promoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pixel"
            android:gravity="center"
            android:text="@string/typePromo"
            android:textColor="@color/text"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/promoScoreLeftView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixel"
            android:gravity="center"
            android:text="@string/scores"
            android:textColor="@color/secondText"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/editTextPromoCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/typePromo"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pixel"/>

        <Button
            android:id="@+id/promoUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_1"
            android:fontFamily="@font/pixel"
            android:gravity="center"
            android:text="@string/use"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/promoWrongView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixel"
            android:gravity="center"
            android:text="@string/wrong"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:visibility="invisible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>